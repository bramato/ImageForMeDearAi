# ===========================================
# ImageForMeDearAi Configuration Template
# ===========================================
# Copy this file to .env and configure your settings
# Get started quickly: npm run install-providers

# ===========================================
# AI Provider Configuration
# ===========================================

# OpenAI/ChatGPT Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
CHATGPT_ENABLED=true
CHATGPT_MODEL=dall-e-3
CHATGPT_VISION_MODEL=gpt-4-vision-preview
CHATGPT_QUALITY=standard
CHATGPT_SIZE=1024x1024

# Optional OpenAI settings
# OPENAI_ORGANIZATION=your-org-id
# OPENAI_BASE_URL=https://api.openai.com/v1
# CHATGPT_TIMEOUT=30000

# HuggingFace Configuration  
# Get your token from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=hf_your-huggingface-token-here
HUGGINGFACE_ENABLED=true
HUGGINGFACE_MODEL=stabilityai/stable-diffusion-xl-base-1.0
HUGGINGFACE_VISION_MODEL=Salesforce/blip-image-captioning-large
HUGGINGFACE_TAGGING_MODEL=google/vit-base-patch16-224

# Optional HuggingFace settings
# HUGGINGFACE_ENDPOINT=https://api-inference.huggingface.co
# HUGGINGFACE_TIMEOUT=60000

# Alternative Models:
# Generation: stabilityai/stable-diffusion-2-1, runwayml/stable-diffusion-v1-5
# Vision: microsoft/DialoGPT-medium, facebook/blenderbot-400M-distill
# Tagging: microsoft/resnet-50, facebook/detr-resnet-50

# ===========================================
# Server Configuration
# ===========================================

# Output Settings
OUTPUT_DIRECTORY=./generated-images
OUTPUT_FORMAT=png
OUTPUT_QUALITY=95
OUTPUT_NAMING_PATTERN={{timestamp}}-{{hash}}-{{provider}}

# Cache Configuration
CACHE_ENABLED=true
CACHE_DIRECTORY=./cache
CACHE_TTL=86400000
CACHE_MAX_SIZE=100
CACHE_MAX_FILE_SIZE=50000000

# Performance Settings
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=120000
RETRY_ATTEMPTS=3
RETRY_DELAY=2000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/server.log
LOG_MAX_SIZE=10000000
LOG_MAX_FILES=5

# Security Settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
CONTENT_POLICY_ENABLED=true

# ===========================================
# Feature Flags
# ===========================================

FEATURE_IMAGE_GENERATION=true
FEATURE_LOGO_GENERATION=true
FEATURE_IMAGE_DESCRIPTION=true
FEATURE_IMAGE_TAGGING=true
FEATURE_BATCH_PROCESSING=false
FEATURE_WEBHOOK_NOTIFICATIONS=false

# ===========================================
# Development Settings (Optional)
# ===========================================

# Environment
NODE_ENV=production
# NODE_ENV=development

# Development debugging
# DEBUG=image-for-me-dear-ai:*
# DEVELOPMENT_MODE=true
# HOT_RELOAD=true

# Server settings (for development/testing)
# SERVER_PORT=3000
# SERVER_HOST=localhost

# ===========================================
# Cache TTL Reference
# ===========================================
# 1 hour:    3600000
# 6 hours:   21600000  
# 12 hours:  43200000
# 24 hours:  86400000 (default)
# 7 days:    604800000
# 30 days:   2592000000

# ===========================================
# Advanced Configuration (Optional)
# ===========================================

# Multi-tenant support (Enterprise)
# MULTI_TENANT_ENABLED=false

# Webhook notifications
# WEBHOOK_URL=https://your-webhook-endpoint.com/notify
# WEBHOOK_SECRET=your-webhook-secret

# External cache (Redis/MongoDB)
# CACHE_STRATEGY=filesystem
# REDIS_URL=redis://localhost:6379
# MONGODB_URL=mongodb://localhost:27017/imageformedearai

# Monitoring and metrics
# METRICS_ENABLED=false
# HEALTH_CHECK_ENABLED=true
# PROMETHEUS_ENDPOINT=/metrics